Trait named: Hello [
    | greeting |

    greeting: aString [
        greeting := aString
    ]

    hello [
        greeting printNl
    ]
]

Object extend [
    | oid |

    Object uses: Hello.

    Object class [
        | oidCount |

        incrOid [ oidCount := oidCount + 1 ]

        new [
            ^ super new oid: self incrOid
        ]
    ]

    oid [
        oid ifNil: [ self oid: self class incrOid ].
        ^ oid
    ]

    oid: anInteger [ 
        oid := anInteger
    ]
